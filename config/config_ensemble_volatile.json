{
  "market_regime": "VOLATILE",
  "description": "변동성 높은 시장 환경에 최적화된 앙상블 전략 설정",
  "time_horizon": "ensemble_volatile",
  
  "data": {
    "symbols": ["AAPL", "META", "NFLX", "QQQ", "SPY", "NVDA", "TSLA", "MSFT", "PLTR", "NVO", "CONL", "ETHU"],
    "interval": "1d",
    "lookback_days": 365,
    "train_ratio": 0.5,
    "end_date": "2025-07-22"
  },

  "output": {
    "results_folder": "results/ensemble",
    "logs_folder": "log/ensemble",
    "backup_folder": "backup/ensemble",
    "data_folder": "data/ensemble"
  },

  "trading": {
    "initial_capital": 100000,
    "commission": 0.001,
    "slippage": 0.0005,
    "position_sizing": "fixed",
    "fixed_position_size": 0.1
  },

  "simulation_settings": {
    "enable_detailed_logging": true,
    "log_trade_details": true,
    "calculate_metrics": true
  },
  
  "regime_specific_settings": {
    "strategy_weights": {
      "volatility_filtered_breakout": 0.25,
      "multi_timeframe_whipsaw": 0.20,
      "adaptive_whipsaw": 0.18,
      "swing_candle_pattern": 0.15,
      "swing_bollinger_band": 0.12,
      "whipsaw_prevention": 0.06,
      "donchian_rsi_whipsaw": 0.04
    },
    "common_params": {
      "position_size": 0.5,
      "stop_loss": 0.05,
      "take_profit": 0.12,
      "trailing_stop": 0.025
    },
    "risk_adjustments": {
      "max_dd_threshold": 0.18,
      "max_dd_penalty": 0.4,
      "volatility_threshold": 0.35,
      "volatility_penalty": 0.2
    },
    "performance_targets": {
      "target_return": 0.12,
      "target_sharpe": 1.3,
      "max_drawdown": 0.18
    }
  }
} 