{
  "time_horizon": "long",
  "strategies": [
    "risk_parity_leverage",
    "fixed_weight_rebalance",
    "etf_momentum_rotation",
    "trend_following_ma200",
    "return_stacking",
    "dual_momentum",
    "volatility_breakout",
    "swing_ema",
    "swing_rsi",
    "swing_donchian"
  ],
  "data": {
    "symbols": ["AAPL", "QQQ", "SPY", "TSLA", "NVDA", "MSFT", "META", "NFLX"],
    "interval": "1d",
    "lookback_days": 365,
    "data_source": "yfinance",
    "auto_adjust": true,
    "prepost": false,
    "train_ratio": 0.8
  },
  "evaluator": {
    "portfolio_mode": true
  },
  "portfolio": {
    "symbols": ["AAPL", "MSFT", "SPY", "TLT", "GLD", "QQQ", "DBMF", "SHY"],
    "weight_calculation_method": "risk_parity",
    "weight_methods": {
      "equal_weight": {"enabled": true},
      "volatility_inverse": {"enabled": true, "lookback_period": 30},
      "risk_parity": {"enabled": true, "target_volatility": 0.15, "max_iterations": 1000},
      "momentum_weight": {"enabled": true, "momentum_period": 20, "top_n_symbols": 3},
      "min_variance": {"enabled": true, "lookback_period": 60}
    },
    "rebalance_period": 60,
    "risk_free_rate": 0.02,
    "target_volatility": 0.15,
    "min_weight": 0.0,
    "max_weight": 0.6,
    "short_weight_limit": 0.2
  },
  "trading": {
    "initial_capital": 100000,
    "commission": 0.001,
    "slippage": 0.0005,
    "position_sizing": "fixed",
    "fixed_position_size": 0.1
  },
  "researcher": {
    "optimization_method": "bayesian_optimization",
    "optimization_settings": {
      "bayesian_optimization": {
        "n_trials": 50,
        "n_startup_trials": 5,
        "early_stopping_patience": 10
      },
      "grid_search": {
        "max_combinations": 100
      }
    },
    "evaluation_metrics": {
      "weights": {
        "sharpe_ratio": 0.25,
        "sortino_ratio": 0.20,
        "calmar_ratio": 0.15,
        "profit_factor": 0.20,
        "win_rate": 0.20
      }
    },
    "risk_penalties": {
      "max_drawdown_threshold": 0.20,
      "max_drawdown_penalty": 0.5,
      "volatility_threshold": 0.30,
      "volatility_penalty": 0.3
    },
    "performance_thresholds": {
      "min_return_threshold": 0.0,
      "min_sharpe_ratio": -1.0,
      "min_profit_factor": 0.0,
      "min_win_rate": 0.0,
      "min_trades": 1
    }
  },
  "cleaner": {
    "run_cleaner": true,
    "action": "clean-and-recreate",
    "folders": ["data/long","log/long", "results/long", "analysis/long"]
  },
  "automation": {
    "auto_clean": true,
    "auto_backup": true,
    "notification": false
  },
  "logging": {
    "level": "INFO",
    "file_rotation": true,
    "max_file_size": "10MB",
    "backup_count": 5
  },
  "output": {
    "results_folder": "results/long",
    "logs_folder": "log/long",
    "backup_folder": "backup/long",
    "separate_strategy_results": true
  },
  "flow": {
    "stages": ["cleaner", "scrapper", "analyzer", "researcher", "evaluator", "portfolio_manager"],
    "stop_on_error": true,
    "enable_research": true
  },
  "simulation_settings": {
    "enable_detailed_logging": true,
    "log_trade_details": true,
    "calculate_metrics": true
  }
} 